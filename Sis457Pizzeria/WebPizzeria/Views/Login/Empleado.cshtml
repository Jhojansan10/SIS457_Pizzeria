@{
    ViewData["Title"] = "Login Empleado";
}

<section class="ftco-section">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="p-5 rounded shadow" style="width: 100%; max-width: 500px; background-color: #212529;">
            <h2 class="text-white mb-4 text-center">@ViewData["Title"]</h2>

            <form asp-action="Empleado" method="post">
                <div class="mb-3">
                    <label class="form-label text-white">Usuario</label>
                    <input name="usuarioLogin" class="form-control bg-dark text-light border-secondary" required />
                </div>

                <div class="mb-3">
                    <label class="form-label text-white">Clave</label>
                    <input name="clave" class="form-control bg-dark text-light border-secondary" type="password" required />
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <div class="text-end">
                    <button type="submit" class="btn btn-success">Iniciar Sesión</button>
                </div>
            </form>
        </div>
    </div>
</section>
