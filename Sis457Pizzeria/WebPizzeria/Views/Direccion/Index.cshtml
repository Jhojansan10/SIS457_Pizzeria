@model IEnumerable<CadPizzeria.Direccion>

@{
    ViewData["Title"] = "Lista de direcciones";
}

<section class="ftco-section">
    <div class="container p-4 rounded shadow" style="background-color: #212529;">
        <h2 class="text-white mb-4">@ViewData["Title"]</h2>

        <p>
            <a asp-action="Crear" class="btn btn-success mb-3">Crear nueva dirección</a>
        </p>

        <form method="get" asp-action="Index" class="mb-4">
            <div class="input-group">
                <input type="text" name="filtro" class="form-control bg-dark text-light border-light" placeholder="Buscar por calle o indicaciones" value="@ViewBag.Filtro" />
                <button type="submit" class="btn btn-outline-light">Buscar</button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-bordered text-white text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Cliente</th>
                        <th>Calle</th>
                        <th>Indicaciones</th>
                        <th>Fecha de Registro</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Cliente?.nombres</td>
                            <td>@item.calle</td>
                            <td>@item.indicaciones</td>
                            <td>@(((DateTime)item.fechaRegistro).ToString("dd/MM/yyyy"))</td>
                            <td>
                                <a asp-action="Editar" asp-route-id="@item.id" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-action="Eliminar" asp-route-id="@item.id" class="btn btn-danger btn-sm" onclick="return confirm('¿Seguro que deseas eliminar esta dirección?')">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
