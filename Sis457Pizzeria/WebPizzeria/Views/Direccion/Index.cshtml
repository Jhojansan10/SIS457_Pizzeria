@model IEnumerable<CadPizzeria.Direccion>

@{
    ViewData["Title"] = "Lista de direcciones";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Crear" class="btn btn-primary">Crear nueva dirección</a>
</p>

<form method="get" asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="text" name="filtro" class="form-control" placeholder="Buscar por calle o indicaciones" value="@ViewBag.Filtro" />
        <button type="submit" class="btn btn-outline-primary">Buscar</button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Calle</th>
            <th>Indicaciones</th>
            <th>Fecha de Registro</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cliente?.nombres</td>
                <td>@item.calle</td>
                <td>@item.indicaciones</td>
                <td>@(((DateTime)item.fechaRegistro).ToString("dd/MM/yyyy"))</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.id" class="btn btn-danger btn-sm" onclick="return confirm('¿Seguro que deseas eliminar esta dirección?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
