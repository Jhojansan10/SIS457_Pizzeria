@model CadPizzeria.Direccion

@{
    ViewData["Title"] = "Crear dirección";
}

<section class="ftco-section">
    <div class="container p-4 rounded shadow" style="max-width: 800px; background-color: #212529;">
        <h2 class="text-white mb-4">@ViewData["Title"]</h2>

        <form asp-action="Crear" method="post">
            <div class="mb-3">
                <label asp-for="idCliente" class="form-label text-white">Cliente</label>
                <select asp-for="idCliente" asp-items="ViewBag.Clientes" class="form-select bg-dark text-light border-secondary">
                    <option value="">-- Seleccione --</option>
                </select>
                <span asp-validation-for="idCliente" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="calle" class="form-label text-white">Calle</label>
                <input asp-for="calle" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="calle" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="indicaciones" class="form-label text-white">Indicaciones</label>
                <input asp-for="indicaciones" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="indicaciones" class="text-danger"></span>
            </div>

            <div class="mt-4 text-end">
                <button type="submit" class="btn btn-success">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</section>
