@model CadPizzeria.Cliente

@{
    ViewData["Title"] = "Editar cliente";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="id" />
    <input type="hidden" asp-for="fechaRegistro" />
    <input type="hidden" asp-for="estado" />

    <div class="form-group">
        <label asp-for="cedulaIdentidad"></label>
        <input asp-for="cedulaIdentidad" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="nombres"></label>
        <input asp-for="nombres" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="primerApellido"></label>
        <input asp-for="primerApellido" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="segundoApellido"></label>
        <input asp-for="segundoApellido" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="celular"></label>
        <input asp-for="celular" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="direccion"></label>
        <input asp-for="direccion" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
