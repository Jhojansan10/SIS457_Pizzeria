@model CadPizzeria.Cliente

@{
    ViewData["Title"] = "Crear cliente";
}

<section class="ftco-section">
    <div class="container p-4 rounded shadow" style="max-width: 800px; background-color: #212529;">
        <h2 class="text-white mb-4">@ViewData["Title"]</h2>

        <form asp-action="Crear" method="post">
            <div class="mb-3">
                <label asp-for="cedulaIdentidad" class="form-label text-light"></label>
                <input asp-for="cedulaIdentidad" class="form-control bg-dark text-light border-light" />
                <span asp-validation-for="cedulaIdentidad" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="nombres" class="form-label text-light"></label>
                <input asp-for="nombres" class="form-control bg-dark text-light border-light" />
                <span asp-validation-for="nombres" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="primerApellido" class="form-label text-light"></label>
                <input asp-for="primerApellido" class="form-control bg-dark text-light border-light" />
                <span asp-validation-for="primerApellido" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="segundoApellido" class="form-label text-light"></label>
                <input asp-for="segundoApellido" class="form-control bg-dark text-light border-light" />
                <span asp-validation-for="segundoApellido" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="celular" class="form-label text-light"></label>
                <input asp-for="celular" class="form-control bg-dark text-light border-light" />
                <span asp-validation-for="celular" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="direccion" class="form-label text-light"></label>
                <input asp-for="direccion" class="form-control bg-dark text-light border-light" />
                <span asp-validation-for="direccion" class="text-danger"></span>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-success">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</section>
