@model IEnumerable<CadPizzeria.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<section class="ftco-section">
    <div class="container p-5 rounded shadow" style="max-width: 1000px; background-color: #212529;">
        <h2 class="text-white mb-4">@ViewData["Title"]</h2>

        <div class="mb-3 text-end">
            <a asp-action="Crear" class="btn btn-success">Crear nuevo usuario</a>
        </div>

        <form asp-action="Index" method="get" class="mb-4">
            <div class="input-group">
                <input type="text" name="filtro" value="@ViewBag.Filtro" class="form-control bg-dark text-light border-secondary" placeholder="Buscar por nombre o usuario..." />
                <button type="submit" class="btn btn-outline-light">Buscar</button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-dark table-bordered table-striped text-center align-middle">
                <thead class="table-secondary text-dark">
                    <tr>
                        <th>ID</th>
                        <th>Empleado</th>
                        <th>Usuario</th>
                        <th>Fecha Registro</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.Empleado.nombres @item.Empleado.primerApellido @item.Empleado.segundoApellido</td>
                            <td>@item.usuarioLogin</td>
                            <td>@item.fechaRegistro?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <a asp-action="Editar" asp-route-id="@item.id" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-action="Eliminar" asp-route-id="@item.id" class="btn btn-danger btn-sm ms-1" onclick="return confirm('¿Deseas eliminar este usuario?');">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
