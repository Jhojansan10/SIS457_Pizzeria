@model IEnumerable<CadPizzeria.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Crear" class="btn btn-primary">Crear nuevo usuario</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="filtro" value="@ViewBag.Filtro" class="form-control" placeholder="Buscar por nombre o usuario..." />
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Empleado</th>
            <th>Usuario</th>
            <th>Fecha Registro</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.Empleado.nombres @item.Empleado.primerApellido @item.Empleado.segundoApellido</td>
                <td>@item.usuarioLogin</td>
                <td>@item.fechaRegistro?.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>