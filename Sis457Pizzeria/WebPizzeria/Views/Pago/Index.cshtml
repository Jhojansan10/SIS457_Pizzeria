@model IEnumerable<CadPizzeria.Pago>
@{
    ViewData["Title"] = "Lista de pagos";
}

<h2>Lista de pagos</h2>

<p>
    <a asp-action="Crear" class="btn btn-primary">Registrar nuevo pago</a>
</p>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="filtro" class="form-control" placeholder="Buscar por método" />
    <button type="submit" class="btn btn-outline-primary ml-2">Buscar</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Método de Pago</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.metodoPago</td>
                <td>@(item.estado == 1 ? "Activo" : "Inactivo")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.id" class="btn btn-warning">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
