@model IEnumerable<CadPizzeria.Producto>

@{
    ViewBag.Title = "Lista de productos";
}

<h2>Lista de productos</h2>

<p>
    <a asp-action="Crear" class="btn btn-primary">Crear nuevo producto</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="filtro" value="@Context.Request.Query["filtro"]" class="form-control" placeholder="Buscar por código, descripción o categoria" />
        <button type="submit" class="btn btn-outline-primary">Buscar</button>
    </div>
</form>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Categoría</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.codigo</td>
                <td>@item.descripcion</td>
                <td>@item.precioVenta</td>
                <td>@item.stock</td>
                <td>@item.CategoriaProducto?.nombre</td>
                <td>@(item.estado == 1 ? "Activo" : "Inactivo")</td>
                <td><a asp-action="Editar" asp-route-id="@item.id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.id" class="btn btn-danger btn-sm"
                       onclick="return confirm('¿Estás seguro de eliminar este producto?');">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
