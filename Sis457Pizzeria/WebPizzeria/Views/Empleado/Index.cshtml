@model IEnumerable<CadPizzeria.Empleado>

@{
    ViewData["Title"] = "Lista de empleados";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Crear" class="btn btn-primary">Registrar nuevo empleado</a>
</p>

<form method="get" asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="text" name="filtro" value="@ViewData["Filtro"]" class="form-control" placeholder="Buscar por nombre o CI..." />
        <button type="submit" class="btn btn-outline-secondary">Buscar</button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>CI</th>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Celular</th>
            <th>Cargo</th>
            <th>Registro</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.cedulaIdentidad</td>
                <td>@item.nombres @item.primerApellido @item.segundoApellido</td>
                <td>@item.direccion</td>
                <td>@item.celular</td>
                <td>@item.cargo</td>
                <td>@item.fechaRegistro?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.id" class="btn btn-sm btn-danger ms-1" onclick="return confirm('¿Está seguro de eliminar este empleado?');">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
