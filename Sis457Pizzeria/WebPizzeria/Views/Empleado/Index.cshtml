@model IEnumerable<CadPizzeria.Empleado>

@{
    ViewData["Title"] = "Lista de empleados";
}

<section class="ftco-section">
    <div class="container p-4 rounded shadow" style="background-color: #212529;">
        <h2 class="text-white mb-4">@ViewData["Title"]</h2>

        <div class="mb-4 text-end">
            <a asp-action="Crear" class="btn btn-success">Registrar nuevo empleado</a>
        </div>

        <form method="get" asp-action="Index" class="mb-4">
            <div class="input-group">
                <input type="text" name="filtro" value="@ViewData["Filtro"]" class="form-control bg-dark text-light border-secondary" placeholder="Buscar por nombre o CI..." />
                <button type="submit" class="btn btn-outline-light">Buscar</button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-dark table-bordered text-center align-middle">
                <thead class="table-secondary text-dark">
                    <tr>
                        <th>ID</th>
                        <th>CI</th>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>Celular</th>
                        <th>Cargo</th>
                        <th>Registro</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.cedulaIdentidad</td>
                            <td>@item.nombres @item.primerApellido @item.segundoApellido</td>
                            <td>@item.direccion</td>
                            <td>@item.celular</td>
                            <td>@item.cargo</td>
                            <td>@item.fechaRegistro?.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-action="Editar" asp-route-id="@item.id" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Eliminar" asp-route-id="@item.id" class="btn btn-sm btn-danger ms-1" onclick="return confirm('¿Está seguro de eliminar este empleado?');">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
