@model CadPizzeria.Empleado

@{
    ViewData["Title"] = "Editar Empleado";
}

<h2>@ViewData["Title"]</h2>
<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="id" />

    <div class="row mb-3">
        <div class="col-md-3">
            <label>CI</label>
            <input asp-for="cedulaIdentidad" class="form-control" />
        </div>
        <div class="col-md-3">
            <label>Nombres</label>
            <input asp-for="nombres" class="form-control" />
        </div>
        <div class="col-md-3">
            <label>Apellido Paterno</label>
            <input asp-for="primerApellido" class="form-control" />
        </div>
        <div class="col-md-3">
            <label>Apellido Materno</label>
            <input asp-for="segundoApellido" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label>Dirección</label>
            <input asp-for="direccion" class="form-control" />
        </div>
        <div class="col-md-2">
            <label>Celular</label>
            <input asp-for="celular" class="form-control" />
        </div>
        <div class="col-md-2">
            <label>Cargo</label>
            <select asp-for="cargo" class="form-select">
                <option value="">-- Seleccione --</option>
                <option value="Administrador">Administrador</option>
                <option value="Empleado">Empleado</option>
                <option value="Repartidor">Repartidor</option>
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
